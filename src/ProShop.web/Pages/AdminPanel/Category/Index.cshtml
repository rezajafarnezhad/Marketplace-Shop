@page
@using ProShop.ViewModels.Categories
@using ProShop.ViewModels
@model ProShop.web.Pages.AdminPanel.Category.IndexModel
@{
    ViewData["Title"] = "دسته بندی ها";
}

<div class="card text-dark bg-white border-0 shadow">

    <div class="card-body">
        <h5 class="card-title">
            @ViewData["Title"]
        </h5>

        <div class="d-grid d-lg-block mb-2 text-end">
            <a asp-page-handler="Add" type="button" class="btn btn-outline-secondary show-modal-form-button">
                افزودن دسته بندی
                <span class="bi bi-plus-circle mt-5"></span>
            </a>
        </div>

        <form class="alert alert-secondary Search-form-via-ajax">
            <input type="hidden" asp-for="CategoriesViewModel.Pagination.CurrentPage"  />
            <div asp-validation-summary="All" class="text-danger asp-validation-summary"></div>

            <h5>
                جستجو در
                @ViewData["Title"]
            </h5>
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="CategoriesViewModel.SearchCategories.Title"></label>
                    <input class="form-control" asp-for="CategoriesViewModel.SearchCategories.Title"  />
                    <span class="span-error-message" asp-validation-for="CategoriesViewModel.SearchCategories.Title"></span>
                </div>
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="CategoriesViewModel.SearchCategories.Slug"></label>
                    <input class="form-control" asp-for="CategoriesViewModel.SearchCategories.Slug"  />
                    <span class="span-error-message" asp-validation-for="CategoriesViewModel.SearchCategories.Slug"></span>
                </div>
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="CategoriesViewModel.SearchCategories.ShowInMenusStatus"></label>
                    <select class="form-control" asp-for="CategoriesViewModel.SearchCategories.ShowInMenusStatus" asp-items="Html.GetEnumSelectList<ShowInMenusStatus>()"></select>
                </div>
                <div class="col-12 col-sm-6 col-lg-3 my-2">
                    <label class="form-label" asp-for="CategoriesViewModel.SearchCategories.DeletedStatus"></label>
                    <select class="form-control" asp-for="CategoriesViewModel.SearchCategories.DeletedStatus" asp-items="Html.GetEnumSelectList<DeletedStatus>()"></select>
                </div>
                <div class="col-12 my-2">
                    <div class="d-grid d-lg-block">
                        <button disabled="disabled" type="submit" class="btn btn-info d-inline-flex align-items-center Search-form-loading">
                            جستجو
                            <span class="spinner-border spinner-border-sm m-2 d-none"></span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="read-data-table">
                <div class="text-center data-table-loading">
                    <img src="/images/Application/loading.gif"  />
                </div>
            </div>
        </form>
    </div>
</div>



<div class="modal fade" id="form-modal-place" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">افزودن دسته بندی</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer d-flex justify-content-start">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>




@section Scripts
{
<partial name="_ValidationScriptsPartial"  />
<script src="~/lib/tinymce/tinymce.min.js"></script>
<script src="~/lib/select2/js/select2.min.js"></script>
<script src="~/lib/select2/js/i18n/fa.min.js"></script>
}

@section CustomScripts
{
<script src="~/Pages/AdminPanel/Category/Index.cshtml.js"></script>
}
@section Styles
{
<link rel="stylesheet" href="~/lib/select2/css/select2.min.css"  />
<link rel="stylesheet" href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.rtl.min.css"  />
}
