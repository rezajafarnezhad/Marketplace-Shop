@model ProShop.ViewModels.FeatureConstantValue.AddFeatureConstantValue

<form close-when-done="false" class="alert alert-secondary custom-ajax-form" asp-page-handler="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        
        <div class="col-lg-4 my-2">
            <label class="form-label" asp-for="CategoryId"></label>
            <select class="form-control custom-select2" asp-for="CategoryId" asp-items="@Model.Categories"></select>
            <span class="span-error-message" asp-validation-for="CategoryId"></span>
        </div> 
        <div class="col-lg-4 my-2">
            <label class="form-label" asp-for="FeatureId"></label>
            <select class="form-control custom-select2" asp-for="FeatureId">
                <option value="0">انتخاب کنید</option>
            </select>
            <span class="span-error-message" asp-validation-for="FeatureId"></span>

        </div> 
        <div class="col-lg-4 my-2">
            <label class="form-label" asp-for="Value"></label>
            <input class="form-control" asp-for="Value"/>
            <span class="span-error-message" asp-validation-for="Value"></span>
        </div>
        <div class="col-12 my-2">
            <div class="d-grid d-lg-block">
                <button type="submit" class="btn btn-info d-inline-flex align-items-center submit-custom-ajax-button">
                    افزودن
                    <span class="spinner-border spinner-border-sm  d-none ms-2"></span>
                </button>
            </div>
        </div>
    </div>
</form>
