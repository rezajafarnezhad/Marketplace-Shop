@page "{productId}"
@model ProShop.web.Pages.SellerPanel.Product.AddVariantModel
@{
    ViewData["Title"] = "افزودن تنوع برای";
    var isnoVarientAdded = Model.Variant.AddedVariantIds.Count == 1 && Model.Variant.AddedVariantIds.First() == null;

}

<div class="row">
    <div class="card text-dark bg-white border-0 shadow">
        <div class="card-body">
            <div class="alert alert-danger">
                توجه:
                <br />
                لطفاً قبل از درج تنوع، مشخصات فنی کالا (مانند: رنگ، ابعاد، اقلام همراه کالا، جنس کالا، تصویر بسته‌بندی و ...) را در سایت چک کرده و اطمینان حاصل کنید که تنوع شما با مشخصات فنی کالا در سایت مطابقت داشته باشد.
            </div>
            @if (Model.Variant.AddedVariantIds.Count > 0 && Model.Variant.AddedVariantIds.First() != null)
            {
                <div class="alert alert-info">
                    توجه:
                    <br />
                    تنوع هایی که قابل انتخاب نیستند قبلا توسط شما انتخاب شده است
                </div>
            }
            <div class="row">
                <div class="col-md-3 text-center">
                    <img src="~/images/Products/@Model.Variant.MainPicture" class="main-image-AddVariant" alt="test" />
                </div>
                <div class="col-md-9">
                    <div class="alert alert-dark">
                        <p class="mb-3 text-center text-primary">
                            <a asp-page="/Product/Index" asp-route-slug="@Model.Variant.Slug" asp-route-productCode="@Model.Variant.ProductCode" target="_blank">
                                @Model.Variant.ProductTitle
                            </a>
                        </p>
                        <div class="row text-center">
                            <div class="col-md-3">
                                دسته بندی:
                                @Model.Variant.CategoryTitle
                            </div>
                            <div class="col-md-3">

                                @{
                                    var variantType = "بدون تنوع";
                                    if (Model.Variant.CategoryIsVariantColor != null)
                                    {
                                        variantType = Model.Variant.CategoryIsVariantColor.Value ? "رنگ" : "سایز";
                                    }

                                }

                                تنوع مجاز این کالا:
                                @variantType
                            </div>
                            <div class="col-md-3">
                                برند کالا:
                                @Model.Variant.BrandFullTitle
                            </div>
                            <div class="col-md-3">
                                کمیسیون فروش این کالا:
                                %@Model.Variant.CommissionPercentage
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form method="post" class="public-ajax-form" call-function-in-the-end="addProductVariantFunc">
                <input type="hidden" asp-for="Variant.ProductId" />
                @if (Model.Variant.CategoryIsVariantColor is null)
                {
                    <input type="hidden" asp-for="Variant.VariantId" value="1" />
                }
                else
                {
                    <input type="hidden" asp-for="Variant.VariantId" />
                }


                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row mt-5">
                    <div div class="col-lg-6 my-2">
                        <label class="d-flex justify-content-between form-label">
                            <span>
                                @Html.DisplayNameFor(c => c.Variant.GaranteeId)
                            </span>
                            <a id="request-new-guarantee" asp-page-handler="RequestForAddGuarantee" class="text-info border-bottom-dashed show-modal-form-button">
                                درخواست
                                گارانتی جدید
                            </a>
                        </label>

                        @* <select class="form-control custom-select2" asp-for="Variant.GaranteeId" asp-items="Model.Variant.Garantees">

                            </select>*@
                        <select class="form-control custom-select2" asp-for="Variant.GaranteeId">
                        </select>

                        <span asp-validation-for="Variant.GaranteeId" class="span-error-message"></span>
                    </div>

                    @if (Model.Variant.CategoryIsVariantColor != null)
                    {
                        <div class="col-lg-6 my-2" id="variant-box">
                            <label class="d-flex justify-content-between form-label">
                                <span>
                                    @Html.DisplayNameFor(c => c.Variant.VariantId)
                                </span>
                                <a id="request-new-variant" asp-page-handler="RequestForAddVariant" class="text-info border-bottom-dashed show-modal-form-button">
                                    درخواست
                                    سایز جدید
                                </a>
                            </label>
                            <span asp-validation-for="Variant.VariantId" class="span-error-message"></span>
                            <div class="border border-1 rounded mt-2 p-2" id="all-variant-box">

                                @foreach (var item in Model.Variant.Variants)
                                {
                                    @if (item.VariantId != 0)
                                    {
                                        var isCurrentVariantAdded = Model.Variant.AddedVariantIds.Contains(item.VariantId);
                                        <button veariant-id="@item.VariantId" type="button" @(isCurrentVariantAdded ? "disabled=disabled" : string.Empty) class="p-2 badge rounded-pill @(isCurrentVariantAdded?"bg-secondary":"bg-dark")  border-0 variant-Item-button @(isCurrentVariantAdded ?"not-allowed-cursor":string.Empty)">
                                            @item.VariantValue
                                            @if (item.VariantIsColor.Value)
                                            {
                                                <span class="rounded" style="background: @item.VariantColorCode">
                                                    &nbsp;
                                                    &nbsp;
                                                    &nbsp;
                                                </span>
                                            }
                                        </button>
                                    }


                                }
                            </div>
                        </div>
                    }

                    <div class="my-2 col-lg-6">
                        <label class="form-label" asp-for="Variant.Price">
                        </label>
                        <input asp-for="Variant.Price" class="form-control" />
                        <span asp-validation-for="Variant.Price" class="span-error-message"></span>
                    </div>
                    <div class="my-2 col-lg-6">
                        <label class="form-label" asp-for="Variant.MaxCountInCart">
                        </label>
                        <input asp-for="Variant.MaxCountInCart" class="form-control" />
                        <span asp-validation-for="Variant.MaxCountInCart" class="span-error-message"></span>
                    </div>
                </div>

                <div class="alert alert-danger@(isnoVarientAdded ? string.Empty : "d-none")">
                    شما قبلا برای این محصول تنوع اضافه کرده اید.
                    و امکان افزودن تنوغ تکراری برای این محصول را ندارید
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn button-72" @(isnoVarientAdded ? "disabled=disabled" : string.Empty)>
                        افزودن تنوع
                        <i class="bi bi-plus-square mr-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/lib/select2/js/i18n/fa.min.js"></script>
}
@section CustomScripts{
    <script src="~/Pages/SellerPanel/Product/AddVariant.cshtml.js"></script>
}
@section Styles
    {
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.rtl.min.css" />
}